<div class="text-wrap">
  <h1>Sign Up</h1>
  <p>J'sors mon cul noir de mon putain de pieu que pour prendre du bif. J'nettoie l'rap mais pour la chatte des MC j'crois qu'j'vais mettre du Cif</p>
</div>

<section class="signup connection">
  <div class="wrapppper">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field text-field">
        <%= f.email_field :email, autofocus: true, :placeholder => 'Mail', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :email, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :password, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password confirmation', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :password_confirmation, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.text_field :firstname, autocomplete: "off", :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'First name' %>
        <%= f.label :firstname, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.text_field :lastname, autocomplete: "off", :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Last name' %>
        <%= f.label :lastname, :class => 'label-helper' %>
      </div>

      <div class="field avatar-field">
          <%= f.label :avatar, class: 'avatar-upload label-helper'  %>
          <%= f.file_field :avatar %>
      </div>

      <div class="actions-button">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</section>