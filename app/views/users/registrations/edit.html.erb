<div class="col-sm-10 col-md-offset-1">
  <div class="text-wrap">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
    <!-- <p>Du marbre sous les pieds on en rêve tous mais pour l'instant. Pour le crack c'est sous l'évier, et la barbe est sous le keffieh</p> -->
  </div>

  <div class="wrapppper">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field text-field">
        <%= f.email_field :email, autofocus: true, :placeholder => 'Mail', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :email, :class => 'label-helper' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field text-field">
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :password, :class => 'label-helper' %> <i>(leave blank if you don't want to change it)</i>
      </div>

      <div class="field text-field">
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Confirm password', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :password_confirmation, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.password_field :current_password, autocomplete: "off", :placeholder => 'Current password', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
        <%= f.label :current_password, :class => 'label-helper' %> <i>(we need your current password to confirm your changes)</i>
      </div>

      <div class="field text-field">
        <%= f.text_field :firstname, :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Firstname'%>
        <%= f.label :firstname, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.text_field :lastname, :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Lastname' %>
        <%= f.label :lastname, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.text_field :telephone, :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Phone number' %>
        <%= f.label :telephone, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.text_field :default_city, :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Default city' %>
        <%= f.label :default_city, :class => 'label-helper' %>
      </div>

      <div class="field text-field">
        <%= f.label :bio, :class => 'label-helper visible' %> </br>
        <%= f.text_area :bio, autocomplete: "off", :onKeyDown => '$(this).parent().addClass("field-complete")', :placeholder => 'Bio' %>
      </div>

      <div class="field avatar-field">
          <%= f.label :avatar, class: 'label-helper visible'  %></br>
          <%= f.file_field :avatar %>
      </div>

      
      <div class="actions">
        <%= f.submit "Update", class: "actions-button update" %>
      </div>
    <% end %>

    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "actions-button cancel-account" %>

    <!-- <%= link_to "Back", :back %> -->
  </div>
</div>