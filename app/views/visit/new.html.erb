<div class="single-form col-sm-10 col-md-offset-1">
  <div class="text-wrap">
    <h1>Request a visit</h1>
    <p>You're only a few shorts steps away from finding a helpful visit agent. Let's get started!</p>
  </div>

  <div class="wrapppper">

    <%= form_for @visit, url: {action: "create"}, html: {class: "visit_form dynamic-form"} do |f| %>
      <div class="form-part appartement">
        <div class="hexagon"><span>1</span></div><h2>The appartment</h2>
        
        <div class="field text-field">
          <label class="label-helper" for="adress">Appartment adress</label>
          <%= f.text_field :adress, :placeholder => "Appartment adress", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>

        <div class="field text-field">
          <label class="label-helper" for="zipcode">Zipcode</label>
          <%= f.text_field :zipcode, :placeholder => "Zipcode", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="city">City</label>
          <%= f.text_field :city, :placeholder => "City", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="country">Country</label>
          <%= f.text_field :country, :placeholder => "Country", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="surface">Appartment surface</label>
          <%= f.number_field :surface, :placeholder => 'Superficie', :onKeyDown => '$(this).parent().addClass("field-complete")', :min => '0' %>
        </div>
      </div>

      <div class="form-part visit">
        <div class="hexagon"><span>2</span></div><h2>Visit</h2>

        <div class="field text-field">
          <label class="label-helper" for="agentName">AgentName</label>
          <%= f.text_field :agentName, :placeholder => "Agent name", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="agencyName">AgencyName</label>
          <%= f.text_field :agencyName, :placeholder => "Agency name", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>

        <div class="field text-field">
          <label class="label-helper" for="telephone">Phone number</label>
          <%= f.text_field :telephone, :placeholder => "Phone number", :onKeyDown => '$(this).parent().addClass("field-complete")'  %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="visitDate1">Visit date 1</label>
          <%= f.date_field :visitDate1, :class => 'date', :onKeyDown => '$(this).parent().addClass("field-complete")' %>
          <%= f.time_field :visitTime1, :class => 'time' %>
        </div>
        
        <div class="field text-field">
          <label class="label-helper" for="visitDate2">Visit date 2</label>
          <%= f.date_field :visitDate2, :class => 'date' %>
          <%= f.time_field :visitTime2, :class => 'time' %>
        </div>
       
        <div class="field text-field">
          <label class="label-helper" for="visitDate3">Visit date 3</label>
          <%= f.date_field :visitDate3, :class => 'date' %>
          <%= f.time_field :visitTime3, :class => 'time' %>
        </div>
      </div>

      <div class="form-part questions">
        <div class="hexagon"><span>3</span></div><h2>Additional questions</h2>

        <div class="field text-field">
          <label class="label-helper" for="question1">Question 1</label>
          <%= f.text_field :question1, :placeholder => "Question 1"  %>
        </div>
        <div class="field text-field">
          <label class="label-helper" for="question2">Question 1</label>
          <%= f.text_field :question2, :placeholder => "Question 2"  %>
        </div>
        <div class="field text-field">
          <label class="label-helper" for="question3">Question 3</label>
          <%= f.text_field :question3, :placeholder => "Question 3"  %>
        </div>
        <div class="field text-field">
          <label class="label-helper" for="question4">Question 4</label>
          <%= f.text_field :question4, :placeholder => "Question 4"  %>
        </div>
      </div>

    	<p class="button request"><%= f.submit "Submit request" %></p>

    	<!-- @TODO: ADD TEXT -->

    <% end %>
  </div>
</div>