<h1>Request a visit</h1>

<%= form_for @visit, url: {action: "create"}, html: {class: "visit_form dynamic-form"} do |f| %>
	<h2><span class="hexagon">1</span>Appartment</h2>

	<label for="adress">Appartment adress</label>
  	<%= f.text_field :adress, :placeholder => "Adress"  %>
  	<label for="zipcode">Zipcode</label>
  	<%= f.text_field :zipcode, :placeholder => "Zipcode"  %>
  	<label for="city">City</label>
  	<%= f.text_field :city, :placeholder => "City"  %>
   	<label for="country">Country</label>
  	<%= f.text_field :country, :placeholder => "Country"  %>
   	<label for="surface">Appartement surface</label>
  	<%= f.number_field :surface %>

  	<h2><span class="hexagon">2</span>Visit</h2>

	<label for="agentName">AgentName</label>
  	<%= f.text_field :agentName, :placeholder => "Agent name"  %>
	<label for="agencyName">AgencyName</label>
  	<%= f.text_field :agencyName, :placeholder => "Agency name"  %>

  	<label for="telephone">Phone number/label>
  	<%= f.text_field :telephone, :placeholder => "Phone number"  %>

	<label for="visitDate1">Visit date 1</label>
  	<%= f.date_field :visitDate1 %>
  	<%= f.time_field :visitTime1 %>
  	<label for="visitDate2">Visit date 2</label>
  	<%= f.date_field :visitDate2 %>
  	<%= f.time_field :visitTime2 %>
  	<label for="visitDate3">Visit date 3</label>
  	<%= f.date_field :visitDate3 %>
  	<%= f.time_field :visitTime3 %>

  	<h2><span class="hexagon">3</span>Questions</h2>

	<label for="wholesomness">Wholesomness</label>
  	<%= check_box :wholesomness, {checked: false, checked_value: "1", unchecked_value: "0"} %>
  	<%= f.number_field :wholesomnessRate, :min => 0, :max => 5 %>
  	
  	<!-- @TODO: Others questions -->

  	<h2><span class="hexagon">4</span>Additional questions</h2>

	<label for="question1">Question 1</label>
  	<%= f.text_field :question1, :placeholder => "Question 1"  %>
  	<label for="question2">Question 1</label>
  	<%= f.text_field :question2, :placeholder => "Question 2"  %>
  	<label for="question3">Question 3</label>
  	<%= f.text_field :question3, :placeholder => "Question 3"  %>
  	<label for="question4">Question 4</label>
  	<%= f.text_field :question4, :placeholder => "Question 4"  %>

  	<h2><span class="hexagon">5</span>Confirmation</h2>
	
	<p class="button request"><%= f.submit "Submit request" %></p>

	<!-- @TODO: ADD TEXT -->

<% end %>